  "roles": {
    "realm": [
      {
        "name": "user",
        "description": "Standard user role"
      },
      {
        "name": "admin",
        "description": "Administrator role"
      }
    ],
    "client": {
      "stall-service": [
        {
          "name": "stall-admin",
          "description": "Full access to stall management"
        },
        {
          "name": "stall-manager",
          "description": "Can manage stalls but not delete"
        },
        {
          "name": "stall-viewer",
          "description": "Read-only access to stalls"
        }
      ]
    }
  },
  "clientScopes": [
    {
      "name": "stall-service-scope",
      "description": "Stall Service Scope",
      "protocol": "openid-connect",
      "attributes": {
        "include.in.token.scope": "true",
        "display.on.consent.screen": "true"
      }
    }
  ]
}
